doctype html
html
    head
        include ../_modules/_head.jade
    body
        // 查询
        form.eui-queryBox.clearfix#form
            div.eui-queryBox-col.clearfix
                div.eui-queryBox-left
                    span.eui-queryBox-group
                        |客户名称：
                        input.easyui-textbox.eui-formComponent(type='text')
                    span.eui-queryBox-group
                        |引合编码：
                        input.easyui-textbox.eui-formComponent(type='text')
                    span.eui-queryBox-group
                        |客户担当主：
                        input.easyui-textbox.eui-formComponent(type='text')
                    span.eui-queryBox-group
                        |设备名称：
                        input.easyui-textbox.eui-formComponent(type='text')
            div.clearfix
                div.eui-queryBox-left
                    span.eui-queryBox-group
                        | 客户担当从：
                        input.easyui-textbox.eui-formComponent(type='text')
                    span.eui-querybox-group
                        |预计合同额：
                        select.easyui-combobox.eui-formComponent(style='width: 80px;' data-options="editable: false")
                            option 等于
                            option 大于
                            option 大于等于
                            option 小于
                            option 小于等于
                            option 介于
                        input.easyui-textbox.eui-formComponent(type='text')
                    span.eui-querybox-group
                        |计划签日期：
                        select.easyui-combobox.eui-formComponent(style='width: 80px;' data-options="editable: false")
                            option 等于
                            option 大于
                            option 大于等于
                            option 小于
                            option 小于等于
                            option 介于
                        input.easyui-textbox.eui-formComponent(type='text')
                div.eui-queryBox-right
                    a.easyui-linkbutton#formQuery(data-options="iconCls: 'icon-search'") 查询
                    a.easyui-linkbutton#formReset(data-options="iconCls: 'icon-clear'") 重置
        // 数据
        table#table(style='width: 100%;' data-options="url: 'http://127.0.0.1:10086/data2'")
            thead
                tr
                    th(data-options="field: 'f1', width: '5%'") 序号
                    th(data-options="field: 'f2', width: '15%'") 引合编码
                    th(data-options="field: 'f2', width: '10%'") 客户名称
                    th(data-options="field: 'f2', width: '15%'") 设备名称
                    th(data-options="field: 'f3', width: '10%'") 客户设备名称
                    th(data-options="field: 'f3', width: '10%'") 营业担当
                    th(data-options="field: 'f3', width: '10%'") 技术担当
                    th(data-options="field: 'f3', width: '10%'") 制造担当
                    th(data-options="field: 'f3', width: '10%'") 开始日期
        // js
        script(src='../../js/common/require.2.2.0.min.js')
        script(src='../../js/common/require.config.js')
        script.
            require(["common", "initDatagrid", "btnCtrlTable", "formQuery", "formReset"], function (common, initDatagrid, btnCtrlTable, formQuery, formReset){
                var $table = $("#table");
                initDatagrid($table);
                // btnCtrlTable($btnLook, null, "https://baidu.com", "openWindow", null);
                // 查询
                formQuery($("#formQuery"), $table, "http://127.0.0.1:10086/data1");
                // 重置
                formReset($("#formReset"), $("#form"));
            });