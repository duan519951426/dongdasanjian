doctype html
html
    head
        include ../_modules/_head.jade
    body
        // 查询
        form.eui-queryBox.clearfix#form
            div.eui-queryBox-left
                span.eui-queryBox-group
                    |资材分类：
                    select.easyui-combobox.eui-formComponent(style='width: 80px;' data-options="editable: false")
                        option 耐材
                        option 机电
            div.eui-queryBox-right
                a.easyui-linkbutton#formQuery(data-options="iconCls: 'icon-search'") 查询
        // 数据
        table#table(style='width: 100%;')
            thead
                tr
                    th(data-options="field: 'f1', width: '40%'")
                    th(data-options="field: 'f2', width: '20%'") 库存数量
                    th(data-options="field: 'f4', width: '20%'") 实际数量
                    th(data-options="field: 'f3', width: '20%'") 单位
        // js
        script(src='../../js/common/require.2.2.0.min.js')
        script(src='../../js/common/require.config.js')
        script.
            require(["common", "initDatagrid", "btnCtrlTable", "formQuery"], function(common, initDatagrid, btnCtrlTable, formQuery){
                var $table= $("#table");
                initDatagrid($table);
                // btnCtrlTable();
                formQuery($("#formQuery"), $table, "http://127.0.0.1:10086/data2");
            });
