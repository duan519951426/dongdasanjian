doctype html
html
    head
        include ../_modules/_head.jade
    body
        table#table(style='width: 100%;' data-options="url: 'http://127.0.0.1:10086/data1', toolbar: '#toolbar-all'")
            thead
                tr
                    th(data-options="field: 'f1', width: '20%'") 标题
                    th(data-options="field: 'f2', width: '20%'") 内容
                    th(data-options="field: 'f3', width: '20%'") 内容发布人
                    th(data-options="field: 'f4', width: '20%'") 发布时间
                    th(data-options="field: 'f5', width: '20%'") 过期时间
        // 工具栏
        div.display-none
            // 全部
            div#toolbar-all
                a.easyui-linkbutton(data-options="iconCls:'icon-search', plain:true") 查看
        // js
        script(src='../../js/common/require.2.2.0.min.js')
        script(src='../../js/common/require.config.js')
        script.
            require(["common", "initDatagrid"], function(common, initDatagrid){
                initDatagrid($("#table"));
            });