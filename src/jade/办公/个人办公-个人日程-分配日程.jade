doctype html
html
    head
        include ../_modules/_head.jade
    body
        // 数据
        table#table(style='width: 100%;' data-options="url: 'http://127.0.0.1:10086/data2'")
            thead
                tr
                    th(data-options="field: 'f1', width: '20%'") 工作内容
                    th(data-options="field: 'f2', width: '20%'") 执行人
                    th(data-options="field: 'f3', width: '15%'") 开始时间
                    th(data-options="field: 'f4', width: '15%'") 计划完成时间
                    th(data-options="field: 'f5', width: '15%'") 实际完成时间
                    th(data-options="field: 'f6', width: '15%'") 状态
        // 工具栏
            div.display-none
                div#toolbar-all
                    a.easyui-linkbutton(href='./个人办公-员工组-添加.html' data-options="iconCls:'icon-add', plain:true") 添加
                    a.easyui-linkbutton(data-options="iconCls:'icon-edit', plain:true") 编辑
                    a.easyui-linkbutton(data-options="iconCls:'icon-cancel', plain:true") 删除
        // js
        script(src='../../js/common/require.2.2.0.min.js')
        script(src='../../js/common/require.config.js')
        script.
            require(["common", "initDatagrid"], function (common, initDatagrid) {
                var $table = $("#table");
                initDatagrid($table);
                // btnCtrlTable($btnLook, null, "https://baidu.com", "openWindow", null);
            });