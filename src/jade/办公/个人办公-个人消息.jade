doctype html
html
    head
        include ../_modules/_head.jade
    body
        // 选项卡
        div.easyui-tabs#easyui-tabs(style='width: 100%;')
            div(title='收件箱' style='padding: 10px;')
                // 查询
                form.eui-queryBox.clearfix#form0
                    div.eui-queryBox-left
                        span.eui-queryBox-group
                            |短消息标题：
                            input.easyui-textbox.eui-formComponent(type='text')
                    div.eui-queryBox-right
                        a.easyui-linkbutton#formQuery0(data-options="iconCls: 'icon-search'") 查询
                        a.easyui-linkbutton#formReset0(data-options="iconCls: 'icon-clear'") 重置
                // 数据
                table#table0(style='width: 100%;' data-options="url: 'http://127.0.0.1:10086/data1', toolbar: '#toolbar-0'")
                    thead
                        tr
                            th(data-options="field: 'f1', width: '20%'") 主题
                            th(data-options="field: 'f2', width: '20%'") 内容
                            th(data-options="field: 'f3', width: '20%'") 发送人
                            th(data-options="field: 'f4', width: '20%'") 发送时间
                            th(data-options="field: 'f5', width: '20%'") 状态
            div(title='发件箱' style='padding: 10px;')
                // 查询
                form.eui-queryBox.clearfix#form1
                    div.eui-queryBox-left
                        span.eui-queryBox-group
                            | 短消息标题：
                            input.easyui-textbox.eui-formComponent(type='text')
                    div.eui-queryBox-right
                        a.easyui-linkbutton#formQuery1(data-options="iconCls: 'icon-search'") 查询
                        a.easyui-linkbutton#formReset1(data-options="iconCls: 'icon-clear'") 重置
                // 数据
                table#table1(style='width: 100%;' data-options="url: 'http://127.0.0.1:10086/data1', toolbar: '#toolbar-1'")
                    thead
                        tr
                            th(data-options="field: 'f1', width: '20%'") 主题
                            th(data-options="field: 'f2', width: '20%'") 内容
                            th(data-options="field: 'f3', width: '20%'") 接收人
                            th(data-options="field: 'f4', width: '20%'") 发送时间
                            th(data-options="field: 'f5', width: '20%'") 状态
        // 工具栏
        div.display-none
            // 全部
            div#toolbar-0
                a.easyui-linkbutton(data-options="iconCls:'icon-add', plain:true") 添加
            // 通过
            div#toolbar-1
                a.easyui-linkbutton(data-options="iconCls:'icon-add', plain:true") 添加
        // js
        script(src='../../js/common/require.2.2.0.min.js')
        script(src='../../js/common/require.config.js')
        script.
            require(["common", "initDatagrid", "tabsEventListenerFun", "formQuery", "formReset"], function(common, initDatagrid, tabsEventListenerFun, formQuery, formReset){
                tabsEventListenerFun($("#easyui-tabs"), [
                    function(){
                        initDatagrid($("#table0"));
                    },
                    function(){
                        initDatagrid($("#table1"));
                    }
                ], false, 0);
            });
