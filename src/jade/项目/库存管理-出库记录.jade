doctype html
html
    head
        meta(charset='utf-8')
        meta(name='renderer' content='webkit')
        meta(http-equiv='X-UA-Compatible' content='IE=edge,chrome=1')
        link(href='../../css/common.css' rel='stylesheet')
        link(href='../../jquery-easyui-1.5/metro/easyui.css' rel='stylesheet')
        link(href='../../jquery-easyui-1.5/icon.css' rel='stylesheet')
    body
        // 数据
        table#table(style='width: 100%;' data-options="url: 'http://127.0.0.1:10086/data2', toolbar: '#toolbar-all'")
            thead
                tr
                    th(data-options="field: 'state', width: '5%', align: 'center'")
                    th(data-options="field: 'f1', width: '20%'") 出库单编码
                    th(data-options="field: 'f2', width: '10%'") 管理员
                    th(data-options="field: 'f3', width: '15%'") 出库时间
                    th(data-options="field: 'f4', width: '20%'") 总金额
                    th(data-options="field: 'f5', width: '20%'") 总金额（不含税）
                    th(data-options="field: 'f6', width: '10%'") 出库状态
        // js
        script(src='../../js/common/require.2.2.0.min.js')
        script(src='../../js/common/require.config.js')
        script.
            require(["common", "initDatagrid", "btnCtrlTable", "datagridView"], function (common, initDatagrid, btnCtrlTable, datagridView) {
                var $table = $("#table");
                initDatagrid($table);
                datagridView($table, function (data) {
                    return data.total;
                });
            });