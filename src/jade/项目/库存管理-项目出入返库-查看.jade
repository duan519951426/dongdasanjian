doctype html
html
    head
        meta(charset='utf-8')
        meta(name='renderer' content='webkit')
        meta(http-equiv='X-UA-Compatible' content='IE=edge,chrome=1')
        link(href='../../css/common.css' rel='stylesheet')
        link(href='../../jquery-easyui-1.5/metro/easyui.css' rel='stylesheet')
        link(href='../../jquery-easyui-1.5/icon.css' rel='stylesheet')
    body
        // 选项卡
        div.easyui-tabs#easyui-tabs(style='width: 100%;' data-options="tools: '#tab-tools'")
            div(title='入库单列表' style='padding: 10px;')
                table#table0(style='width: 100%;' data-options="url: 'http://127.0.0.1:10086/data1'")
                    thead
                        tr
                            th(data-options="field: 'f1', width: '20%'") 申请类型
                            th(data-options="field: 'f2', width: '20%'") 申请状态
                            th(data-options="field: 'f3', width: '40%'") 申请内容
                            th(data-options="field: 'f4', width: '20%'") 申请时间
            div(title='出库单列表' style='padding: 10px;')
                table#table1(style='width: 100%;' data-options="url: 'http://127.0.0.1:10086/data1'")
                    thead
                        tr
                            th(data-options="field: 'f1', width: '25%'") 申请类型
                            th(data-options="field: 'f3', width: '50%'") 申请内容
                            th(data-options="field: 'f4', width: '25%'") 申请时间
            div(title='返库单列表' style='padding: 10px;')
                table#table2(style='width: 100%;' data-options="url: 'http://127.0.0.1:10086/data1'")
                    thead
                        tr
                            th(data-options="field: 'f1', width: '25%'") 申请类型
                            th(data-options="field: 'f3', width: '50%'") 申请内容
                            th(data-options="field: 'f4', width: '25%'") 申请时间
        // 工具
        div#tab-tools
            span 约定编码：G16101-1
            a.easyui-linkbutton(href="#" data-options="iconCls: 'icon-undo', plain: true") 返回
        // js
        script(src='../../js/common/require.2.2.0.min.js')
        script(src='../../js/common/require.config.js')
        script.
            require(["common", "initDatagrid", "tabsEventListenerFun"], function(common, initDatagrid, tabsEventListenerFun){
                tabsEventListenerFun($("#easyui-tabs"), [
                    function(){
                        initDatagrid($("#table0"));
                    },
                    function(){
                        initDatagrid($("#table1"));
                    },
                    function(){
                        initDatagrid($("#table2"));
                    }
                ], false, 0);
            });
