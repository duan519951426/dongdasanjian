doctype html
html
    head
        include ../_modules/_head.jade
    body
        // 选项卡
        div.easyui-tabs#easyui-tabs(style='width: 100%;')
            div(title='本月实际受注项目' style='padding: 10px;')
                table#table1(style='width: 100%;' data-options="url: 'http://127.0.0.1:10086/data1'")
                    thead
                        tr
                            th(data-options="field: 'f1', width: '20%'") 约定编码
                            th(data-options="field: 'f2', width: '20%'") 客户名称
                            th(data-options="field: 'f3', width: '20%'") 项目名称
                            th(data-options="field: 'f4', width: '10%'") 签订金额
                            th(data-options="field: 'f4', width: '20%'") 总受注金额
                            th(data-options="field: 'f4', width: '20%'") 本月受注金额
                            th(data-options="field: 'f4', width: '20%'") 担当
            div(title='本月预受注项目' style='padding: 10px;')
                table#table2(style='width: 100%;' data-options="url: 'http://127.0.0.1:10086/data1'")
                    thead
                        tr
                            th(data-options="field: 'f1', width: '10%'") 约定编码
                            th(data-options="field: 'f3', width: '20%'") 客户名称
                            th(data-options="field: 'f4', width: '20%'") 项目名称
                            th(data-options="field: 'f1', width: '20%'") 签订金额
                            th(data-options="field: 'f3', width: '20%'") 预注金额
                            th(data-options="field: 'f4', width: '10%'") 担当
        // js
        script(src='../../js/common/require.2.2.0.min.js')
        script(src='../../js/common/require.config.js')
        script.
            require(["common", "initDatagrid", "tabsEventListenerFun"], function(common, initDatagrid, tabsEventListenerFun){
                tabsEventListenerFun($("#easyui-tabs"), [
                    function(){
                        initDatagrid($("#table1"));
                    },
                    function(){
                        initDatagrid($("#table2"));
                    }
                ], false, 0);
            });