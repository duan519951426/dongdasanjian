doctype html
html
    head
        include ../_modules/_head.jade
        style.
            .fr {float: right;}
    body
        // 数据
        table#table(style='width: 100%;' data-options="url: 'http://127.0.0.1:10086/data1', toolbar: '#toolbar-all'")
            thead
                tr
                    th(data-options="field: 'f1', width: '20%'") 资材名称
                    th(data-options="field: 'f2', width: '15%'") 规格型号
                    th(data-options="field: 'f3', width: '15%'") 采购数量
                    th(data-options="field: 'f4', width: '15%'") 采购单价
                    th(data-options="field: 'f5', width: '20%'") 交货地
                    th(data-options="field: 'f6', width: '15%'") 希望到货时间
        // 工具栏
        div.display-none
            div.clearfix#toolbar-all
                a.easyui-linkbutton(data-options="iconCls:'icon-cancel', plain:true") 删除
                span.fr
                    select.easyui-combobox.eui-formComponent(data-options="editable: false, url: 'http://127.0.0.1:10086/combobox', method: 'GET', valueField: 'id', textField: 'text'")
                    a.easyui-linkbutton(data-options="iconCls:'icon-add', plain:true") 添加资材
        // js
        script(src='../../js/common/require.2.2.0.min.js')
        script(src='../../js/common/require.config.js')
        script.
            require(["common", "initDatagrid"], function(common, initDatagrid){
                var $table = $("#table");
                initDatagrid($table);
            });

