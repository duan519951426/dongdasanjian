doctype html
html
    head
        include ../_modules/_head.jade
    body
        // 查询
        form.eui-queryBox.clearfix#form
            div.eui-queryBox-left
                span.eui-queryBox-group
                    |客户名称：
                    input.easyui-textbox.eui-formComponent(type='text')
                span.eui-queryBox-group
                    |引合编码：
                    input.easyui-textbox.eui-formComponent(type='text')
                span.eui-queryBox-group
                    |约定编码：
                    input.easyui-textbox.eui-formComponent(type='text')
            div.eui-queryBox-right
                a.easyui-linkbutton#formQuery(data-options="iconCls: 'icon-search'") 查询
                a.easyui-linkbutton#formReset(data-options="iconCls: 'icon-clear'") 重置
        // 数据
        table#table(style='width: 100%;' data-options="url: 'http://127.0.0.1:10086/data1', toolbar: '#toolbar-all'")
            thead
                tr
                    th(data-options="field: 'f1', width: '20%'") 联络对象
                    th(data-options="field: 'f2', width: '20%'") 所属项目
                    th(data-options="field: 'f3', width: '20%'") 对象类别
                    th(data-options="field: 'f4', width: '20%'") 联络日期
                    th(data-options="field: 'f5', width: '20%'") 接洽人
        // 工具栏
        div.display-none
            div.clearfix#toolbar-all
                a.easyui-linkbutton(href='./项目/项目管理-联络记录-添加联络记录.html' data-options="iconCls:'icon-add', plain:true") 添加联络记录
                a.easyui-linkbutton(data-options="iconCls:'icon-edit', plain:true") 修改联络记录
                a.easyui-linkbutton(data-options="iconCls:'icon-search', plain:true") 查看联络记录
        // js
        script(src='../../js/common/require.2.2.0.min.js')
        script(src='../../js/common/require.config.js')
        script.
            require(["common", "initDatagrid", "btnCtrlTable", "formQuery", "formReset"], function (common, initDatagrid, btnCtrlTable, formQuery, formReset) {
                var $table = $("#table");
                initDatagrid($table);
                // 查询
                formQuery($("#formQuery"), $table, "http://127.0.0.1:10086/data1");
                // 重置
                formReset($("#formReset"), $("#form"));
            });
